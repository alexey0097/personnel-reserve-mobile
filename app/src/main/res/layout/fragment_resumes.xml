<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">
            <Button
                    android:text="@string/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonCountNdfl"/>
            <Button
                    android:text="@string/btn_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonRefresh" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
        </LinearLayout>
        <ListView
                android:id="@+id/resumeListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
        </ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>